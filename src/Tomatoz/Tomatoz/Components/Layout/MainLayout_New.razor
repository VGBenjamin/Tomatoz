@inherits LayoutComponentBase

<div class="min-h-screen bg-[#FCFAF5]">
    <TomatoHeader />
    <TomatoHero />
    <TomatoMainContent />
    <TomatoContributeSection />
    
    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-auto">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Logo et description -->
                <div class="md:col-span-1">
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-red-600 rounded-full flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2C8.69 2 6 4.69 6 8c0 1.5.5 2.88 1.33 4C6.5 13.5 6 15.5 6 18c0 2.21 1.79 4 4 4h4c2.21 0 4-1.79 4-4 0-2.5-.5-4.5-1.33-6C17.5 10.88 18 9.5 18 8c0-3.31-2.69-6-6-6z"/>
                            </svg>
                        </div>
                        <span class="text-xl font-bold">Tomatoz</span>
                    </div>
                    <p class="text-gray-300 text-sm mb-4">
                        La plateforme collaborative dédiée aux passionnés de tomates et de jardinage.
                    </p>
                </div>

                <!-- Navigation -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Navigation</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Accueil</a></li>
                        <li><a href="/varieties" class="text-gray-300 hover:text-white transition-colors">Toutes les variétés</a></li>
                        <li><a href="/varieties/add" class="text-gray-300 hover:text-white transition-colors">Ajouter une variété</a></li>
                        <li><a href="/guide" class="text-gray-300 hover:text-white transition-colors">Guide du jardinier</a></li>
                        <li><a href="/community" class="text-gray-300 hover:text-white transition-colors">Communauté</a></li>
                    </ul>
                </div>

                <!-- Ressources -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Ressources</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="/tools" class="text-gray-300 hover:text-white transition-colors">Outils de jardinage</a></li>
                        <li><a href="/about/contribute" class="text-gray-300 hover:text-white transition-colors">Contribuer</a></li>
                        <li><a href="/community/rules" class="text-gray-300 hover:text-white transition-colors">Règles de modération</a></li>
                        <li><a href="/help" class="text-gray-300 hover:text-white transition-colors">Centre d'aide</a></li>
                        <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
                    </ul>
                </div>

                <!-- Légal -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Légal</h3>
                    <ul class="space-y-2 text-sm">
                        <li><a href="/legal" class="text-gray-300 hover:text-white transition-colors">Mentions légales</a></li>
                        <li><a href="/privacy" class="text-gray-300 hover:text-white transition-colors">Politique de confidentialité</a></li>
                        <li><a href="/terms" class="text-gray-300 hover:text-white transition-colors">Conditions d'utilisation</a></li>
                        <li><a href="/license" class="text-gray-300 hover:text-white transition-colors">Licence CC BY-NC-SA</a></li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-400 text-sm">
                    © 2025 Tomatoz - Wiki collaboratif sur les tomates. Contenu sous licence 
                    <a href="/license" class="text-red-400 hover:text-red-300">Creative Commons BY-NC-SA</a>
                </p>
            </div>
        </div>
    </footer>
    
    <!-- Main content area for individual pages -->
    <main class="container mx-auto px-4 py-8">
        @Body
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="flex items-center justify-between">
        <span>Une erreur s'est produite. Veuillez recharger la page.</span>
        <div class="flex items-center space-x-2">
            <a href="." class="reload btn btn-sm bg-white/20 text-white border-white/30 hover:bg-white/30">Recharger</a>
            <span class="dismiss cursor-pointer hover:text-red-200">✕</span>
        </div>
    </div>
</div>
